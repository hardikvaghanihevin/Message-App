    <style name="ImageView.WrapContent" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ImageView.WrapContent.CornerNone" parent="ImageView.WrapContent">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.None</item>
