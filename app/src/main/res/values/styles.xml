        <item name="android:background">@drawable/bg_positive_view</item>
    </style>

    <style name="PopupItemText" parent="TextView.WrapContent.InstrumentSansMedium.MediumText_42">
        <item name="android:drawablePadding">@dimen/app_px_50_to_dp</item>
    </style>


