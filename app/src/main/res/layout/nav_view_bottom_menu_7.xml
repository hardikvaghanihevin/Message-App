<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_view_bottom_menu_7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bottom_nav_bg"
    android:elevation="4dp"
    android:orientation="vertical">

    <com.hardik.messageapp.presentation.custom_view.shadow_lay.ShadowLayout
        android:id="@+id/shadow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingTop="3dp"
        app:background_blur="4dp"
        app:background_blur_type="SOLID"
        app:gradient_angle="180"
        app:gradient_center_color="@color/color_bottom_nav_elevation"
        app:gradient_end_color="@color/app_color_01"
        app:gradient_start_color="@color/app_color_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_bottom_nav_bg"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Block Tab -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/navViewBottom_ll_block"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/navViewBottom_img_block"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/real_ic_block" />

                    <TextView
                        android:id="@+id/navViewBottom_txt_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:text="@string/block"
                        android:textColor="@color/color_nav_item_unselect"
                        android:textSize="12sp" />

                </LinearLayout>
            </FrameLayout>

            <!-- Archive Tab -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/navViewBottom_ll_archive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/navViewBottom_img_archive"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/real_ic_archive" />

                    <TextView
                        android:id="@+id/navViewBottom_txt_archive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:text="@string/archive"
                        android:textColor="@color/color_nav_item_unselect"
                        android:textSize="12sp" />

                </LinearLayout>
            </FrameLayout>

            <!-- Edit Tab -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/navViewBottom_ll_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/navViewBottom_img_edit"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/real_ic_edit" />

                    <TextView
                        android:id="@+id/navViewBottom_txt_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:text="@string/edit"
                        android:textColor="@color/color_nav_item_unselect"
                        android:textSize="12sp" />

                </LinearLayout>
            </FrameLayout>

            <!-- Delete Tab -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/navViewBottom_ll_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--android:background="?attr/selectableItemBackgroundBorderless"-->
                    <ImageView
                        android:id="@+id/navViewBottom_img_delete"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/real_ic_delete" />

                    <TextView
                        android:id="@+id/navViewBottom_txt_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:text="@string/delete"
                        android:textColor="@color/color_nav_item_unselect"
                        android:textSize="12sp" />

                </LinearLayout>
            </FrameLayout>


        </LinearLayout>
    </com.hardik.messageapp.presentation.custom_view.shadow_lay.ShadowLayout>

</LinearLayout>
