<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemHeader_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/item_recycle_header_h_padding"
    android:paddingVertical="@dimen/item_recycle_header_v_padding">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAlphabetHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/instrument_sans_semi_bold"
        android:textColor="@color/app_color_04"
        android:textSize="@dimen/app_px_50_to_sp"
        tools:text="A" />

    <Space
        android:layout_width="@dimen/space_dp_01"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dotted_line" />
</LinearLayout>
