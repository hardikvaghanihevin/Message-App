<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/white"
    android:padding="8dp">

    <!-- Left Side (Message) -->
    <LinearLayout
        android:id="@+id/navViewBottom_ll_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@drawable/bottom_nav_background_0"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/navViewBottom_txt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="6dp"
            android:drawablePadding="6dp"
            android:text="Message"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/dummy_ic_message"
            app:drawableTint="@color/white" />
    </LinearLayout>

    <!-- Right Side (Settings) -->
    <LinearLayout
        android:id="@+id/navViewBottom_ll_settings"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bottom_nav_background_0"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/navViewBottom_txt_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="6dp"
            android:drawablePadding="6dp"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/dummy_ic_settings"
            app:drawableTint="@color/black" />

    </LinearLayout>
</RelativeLayout>
